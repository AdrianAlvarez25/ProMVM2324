// ---------------------------- LABERINTO ---------------------------------
public class Laberinto{
    private char[][] estructuraLaberinto;
    public Laberinto(int numFilas, int numColumnes){
        this.estructuraLaberinto = new char [numFilas][numColumnes];
    }
    public char[][]
    getEstructuraLaberinto(){
        return estructuraLaberinto;
    }
    public char obtenirContingutCaseta(int fila, int columna){
        return estructuraLaberinto[fila][columna];
    }
    public void
    definirContingutCaseta(int fila, int columna, char contingut){
        estructuraLaberinto[fila][columna] = contingut;
    }
}
